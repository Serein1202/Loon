[MITM]
hostname = h5-api.lynkco.com

[Rewrite]
# 自动抓取 Token（监听签到相关接口）
^https:\/\/h5-api\.lynkco\.com\/up\/api\/v1\/user\/sign script-path=https://raw.githubusercontent.com/Serein1202/Loon/refs/heads/main/test/lynkco_get_token.js, requires-body=true, tag=领克 Token
^https:\/\/h5-api\.lynkco\.com\/up\/api\/v1\/user\/sign\/info script-path=https://raw.githubusercontent.com/Serein1202/Loon/refs/heads/main/test/lynkco_get_token.js, requires-body=true, tag=领克 Token

[Script]
# 每天 08:00 自动签到
cron "0 8 * * *" script-path=https://raw.githubusercontent.com/Serein1202/Loon/refs/heads/main/test/lynkco_sign.js, timeout=30, tag=领克 自动签到